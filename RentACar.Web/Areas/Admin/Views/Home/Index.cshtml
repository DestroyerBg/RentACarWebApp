@{
    ViewData["Title"] = "Админ Панел";
}

<div class="admin-panel-wrapper d-flex justify-content-center align-items-center mt-5">
    <div class="admin-panel-box p-4">
        <h2 class="text-center text-warning mb-4">Админ Панел</h2>
        <hr class="divider" />
        <div class="d-flex flex-column gap-3">
            <a href="@Url.Action("Dashboard", "Admin", new{area = "Admin"})" class="btn btn-dark text-warning btn-lg w-100">
                <i class="fas fa-info-circle me-2"></i> Обща информация
            </a>
            <a href="@Url.Action("ManageCars", "Admin",new{area = "Admin"})" class="btn btn-dark text-info btn-lg w-100">
                <i class="fas fa-car me-2"></i> Автомобили
            </a>
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-dark text-success btn-lg w-100">
                <i class="fas fa-users me-2"></i> Потребители
            </a>
            <a href="@Url.Action("Reservations", "Admin")" class="btn btn-dark text-primary btn-lg w-100">
                <i class="fas fa-calendar-check me-2"></i> Резервации
            </a>
            <a href="@Url.Action("Feedback", "Admin")" class="btn btn-dark text-danger btn-lg w-100">
                <i class="fas fa-comments me-2"></i> Мнения и оплаквания
            </a>
        </div>
    </div>
</div>
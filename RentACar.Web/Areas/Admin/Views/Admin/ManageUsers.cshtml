@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RentACar.Web.ViewModels.User
@model RentACar.Web.ViewModels.User.ManagerUsersViewModel;
<div class="container my-4">
    <h2 class="text-center text-light mb-4">Управление на потребители</h2>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th>Потребителско име</th>
                    <th>Имейл</th>
                    <th>Роли</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserViewModel user in Model.Users)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                @if (user.UserRoles.Count == 0)
                                {
                                    <li><span class="text-bg-info">Потребителят няма зададени роли.</span></li>
                                }
                                else
                                {
                                    @foreach (RoleViewModel role in user.UserRoles)
                                    {
                                        <li class="d-flex align-items-center mb-2">
                                            <span>@role.Name</span>
                                            <button type="button" class="btn btn-sm btn-danger ms-2 remove-role-btn"
                                                    data-userid="@user.Id" data-role="@role.Name">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </li>
                                    }
                                }
                            </ul>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#assignRoleModal-@user.Id">
                                Задай роля
                            </button>
                            <button type="button" class="btn btn-sm btn-danger delete-user-btn" data-userid="@user.Id">
                                Изтрий акаунт
                            </button>
                        </td>
                    </tr>

                    <div class="modal fade" id="assignRoleModal-@user.Id" tabindex="-1" aria-labelledby="assignRoleModalLabel-@user.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content bg-dark text-light">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="assignRoleModalLabel-@user.Id">Задаване на роля за @user.Username</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Затвори"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="assignRoleForm-@user.Id">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <div class="mb-3">
                                            <label for="role-@user.Id" class="form-label">Избери роля:</label>
                                            <select class="form-select" id="role-@user.Id" name="role">
                                                @foreach (RoleViewModel availableRole in Model.Roles.Where(r => !user.UserRoles.Any(ur => ur.Name == r.Name)))
                                                {
                                                    <option value="@availableRole.Name">@availableRole.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Откажи</button>
                                    <button type="button" class="btn btn-primary save-role-btn" data-userid="@user.Id">
                                        Запази
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.assign-role-btn').forEach(button => {
            button.addEventListener('click', function () {
                const userId = this.getAttribute('data-userid');
                document.getElementById('userId').value = userId;
                const assignRoleModal = new bootstrap.Modal(document.getElementById('assignRoleModal'));
                assignRoleModal.show();
            });
        });

        document.querySelectorAll('.saveRoleButton').addEventListener('click', function () {
            const userId = document.getElementById('userId').value;
            const role = document.getElementById('role').value;

            if (!userId || !role) {
                alert('Моля, изберете потребител и роля.');
                return;
            }

            console.log(`Задаване на роля '${role}' за потребител с ID '${userId}'`);

            const userRow = document.querySelector(`.assign-role-btn[data-userid="${userId}"]`).closest('tr');
            const rolesList = userRow.querySelector('td:nth-child(3) ul');
            const newRoleItem = document.createElement('li');
            newRoleItem.className = 'd-flex align-items-center';
            newRoleItem.innerHTML = `
        <span>${role}</span>
        <button type="button" class="btn btn-sm btn-danger ms-2 remove-role-btn" data-userid="${userId}" data-role="${role}">
            <i class="bi bi-x-circle"></i>
        </button>
        `;
            rolesList.appendChild(newRoleItem);

            const assignRoleModal = bootstrap.Modal.getInstance(document.getElementById('assignRoleModal'));
            assignRoleModal.hide();

            addRemoveRoleEvent(newRoleItem.querySelector('.remove-role-btn'));
        });

        function addRemoveRoleEvent(button) {
            button.addEventListener('click', function () {
                const userId = this.getAttribute('data-userid');
                const role = this.getAttribute('data-role');

                if (confirm(`Сигурни ли сте, че искате да премахнете роля '${role}'?`)) {
                    console.log(`Премахване на роля '${role}' за потребител с ID '${userId}'`);
                    this.closest('li').remove();
                }
            });
        }

        document.querySelectorAll('.remove-role-btn').forEach(addRemoveRoleEvent);
    });
</script>
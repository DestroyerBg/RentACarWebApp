@using Microsoft.AspNetCore.Identity
@using RentACar.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-primary text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item me-2">
        <a class="btn btn-identity" asp-area="Identity" asp-page="/Account/Register"> <i class="fa-solid fa-user me-2"></i>Register</a>
    </li>
    <li class="nav-item me-2">
        <a class="btn btn-identity" asp-area="Identity" asp-page="/Account/Login"> <i class="fas fa-sign-in-alt me-2"></i>Login</a>
    </li>
}
</ul>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card bg-dark text-light shadow-lg" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <div class="card-body p-4">
            <h4 class="card-title text-center mb-4">Смяна на парола</h4>

            <form id="phoneNumberForm">
                <div class="form-field">
                    <input class="custom-input" id ="phoneNumber" autocomplete="PhoneNumber" aria-required="true" placeholder="+35989123456" />
                    <label class="custom-label">Телефонен номер</label>
                    <span class="text-danger"></span>
                </div>
                <button type="submit" id ="submitPhoneNumberBtn" class="btn btn-warning w-100 py-2">Изпрати код</button>
            </form>

            <form id="verificationCodeForm" class="mt-4 d-none">
                <div class="form-group mb-3">
                    <label for="verificationCode" class="form-label">Код от SMS</label>
                    <input type="text" id="verificationCode" class="form-control bg-secondary text-light border-0" placeholder="123456" required>
                </div>
                <button type="submit" class="btn btn-success w-100 py-2">Потвърди</button>
            </form>

            <form id="newPasswordForm" class="mt-4 d-none">
                <div class="form-group mb-3">
                    <label for="newPassword" class="form-label">Нова парола</label>
                    <input type="password" id="newPassword" class="form-control bg-secondary text-light border-0" placeholder="********" required>
                </div>
                <div class="form-group mb-3">
                    <label for="confirmPassword" class="form-label">Потвърдете паролата</label>
                    <input type="password" id="confirmPassword" class="form-control bg-secondary text-light border-0" placeholder="********" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Запази паролата</button>
            </form>
        </div>
    </div>
</div>